@model CarRentalApplication.Models.VMs.Cars.CreateCarViewModel

@{
    ViewData["Title"] = "Add Car";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="form-div">
    <div class="img-div">
        <img src="/img/register.jpg" alt="login-img" />
    </div>
    <form id="create-car-form" class="form form-control" asp-controller="Cars" asp-action="AddCarPost" method="POST" enctype="multipart/form-data">
        @* @Html.AntiForgeryToken() *@
        <div class="form-group form-field">
            <label>Brand</label>
            <br />
            <input asp-for="Brand" class="form-input form-control" />
            <span asp-validation-for="Brand" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Model</label>
            <br />
            <input asp-for="Model" class="form-input form-control" />
            <span asp-validation-for="Model" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Year</label>
            <br />
            <input asp-for="Year" type="number" class="form-input form-control" />
            <span asp-validation-for="Year" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Color</label>
            <br />
            <input asp-for="Color" class="form-input form-control" />
            <span asp-validation-for="Color" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Engine</label>
            <br />
            <input asp-for="Engine" class="form-input form-control" />
            <span asp-validation-for="Engine" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Gearbox</label>
            <br />
            <input asp-for="Gearbox" class="form-input form-control" />
            <span asp-validation-for="Gearbox" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Fuel Capacity</label>
            <br />
            <input asp-for="FuelCapacity" class="form-input form-control" />
            <span asp-validation-for="FuelCapacity" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Capacity</label>
            <br />
            <input asp-for="Capacity" class="form-input form-control" />
            <span asp-validation-for="Capacity" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>City</label>
            <br />
            <input asp-for="City" class="form-input form-control" />
            <span asp-validation-for="City" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Price</label>
            <br />
            <input asp-for="Price" class="form-input form-control" />
            <span asp-validation-for="Price" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Image</label>
            <br />
            <input asp-for="Image" class="form-input form-control" />
            <span asp-validation-for="Image" class="text-danger" style="display:block;"></span>
        </div>

        <br />

        <div class="login-form-buttons">
            <button type="submit" class="btn btn-blue">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
