@model CarRentalApplication.Models.VMs.Auth.RegisterViewModel;

@{
    ViewData["Title"] = "Register";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danged">
        @TempData["Error"]
    </div>
}
<div class="form-div">
    <div class="img-div">
        <img src="/img/login.jpg" alt="login-img" />
    </div>
    <form id="login-form" class="form form-control" asp-controller="Auth" asp-action="Register" method="post">
        <div class="form-group form-field">
            <label>First name</label>
            <br />
            <input asp-for="FirstName" class="form-input form-control" />
            <span asp-validation-for="FirstName" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Last name</label>
            <br />
            <input asp-for="LastName" class="form-input form-control" />
            <span asp-validation-for="LastName" class="text-danger" style="display:block;"></span>
        </div>
        
        <div class="form-group form-field">
            <label>Phone number</label>
            <br />
            <input asp-for="PhoneNumber" class="form-input form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Email</label>
            <br />
            <input asp-for="Email" class="form-input form-control" />
            <span asp-validation-for="Email" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Password</label>
            <br />
            <input asp-for="Password" class="form-input form-control" />
            <span asp-validation-for="Password" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Confirm password</label>
            <br />
            <input asp-for="ConfirmPassword" class="form-input form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="display:block;"></span>
        </div>

        <br />

        <div class="login-form-buttons">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
