@model CarRentalApplication.Models.VMs.Auth.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="form-div">
    <div class="img-div">
        <img src="/img/login.jpg" alt="login-img" />
    </div>
    <form id="login-form" class="form form-control" asp-controller="Auth" asp-action="Login" method="post">
        <div class="form-group form-field">
            <label>Phone number</label>
            <br />
            <input asp-for="PhoneNumber" class="form-input form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" style="display:block;"></span>
        </div>

        <div class="form-group form-field">
            <label>Password</label>
            <br />
            <input asp-for="Password" class="form-input form-control" />
            <span asp-validation-for="Password" class="text-danger" style="display:block;"></span>
        </div>

        <br />

        <div class="login-form-buttons">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
